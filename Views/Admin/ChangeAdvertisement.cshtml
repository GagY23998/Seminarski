@model  AdvertisementViewModel

@{ Layout = "~/Views/Shared/_Layout.cshtml";}
<div >
    <form method="post" enctype="multipart/form-data">

        <div class="form-group-sm">
            <label class="control-label" asp-for="@Model.TypeName">Advertisement Type:</label>
            <input class="form-control" type="text" asp-for="@Model.TypeName" value="@Model.TypeName"/>
            <span asp-validation-for="@Model.TypeName"></span>
        </div>
        <div class="form-group-sm">
            <label class="control-label" asp-for="@Model.UserName">Client:</label>
            <input class="form-control" type="text" asp-for="@Model.UserName"/>
            <span asp-validation-for="@Model.UserName"></span>
        </div>
        <div class="form-group-sm">
            <label hidden asp-for="@Model.RegistrationDate">Registration Date:</label>
            <input hidden type="datetime-local" asp-for="@Model.RegistrationDate"/>
            <span asp-validation-for="@Model.RegistrationDate"></span>
        </div>
        <div class="form-group-sm">
            <label class="control-label" asp-for="@Model.ExpirationDate">Expiration Date:</label>
            <input class="form-control datepicker" type="date" asp-for="@Model.ExpirationDate"/>
            <span asp-validation-for="@Model.ExpirationDate"></span>
        </div>
        <div class="form-group-sm">
            <label asp-for="@Model.Description">Description:</label>
            <textarea class="form-control" asp-for="@Model.Description"></textarea>
            <span asp-validation-for="@Model.Description"></span>
        </div>
        <div class="form-group-sm">
            <img class="img-thumbnail" height="300" width="300" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.Image))" alt="Slika"/>
        </div>
        <div class="form-group-sm">
            
            <div class="btn btn-file">
                <label>Slika oglasa:</label>
                <i class="fa fa-link"></i>
                <input type="file" name="image" />
            </div>
        </div>
        <div class="col-lg-offset-2">
            <button class="btn btn-primary" type="submit">Potvrdi</button>
            <button class="btn btn-warning" type="reset">Reset</button>
        </div>
    </form>
</div>