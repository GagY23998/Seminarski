@model Artikl

<style>
.Artikal{
    color:White;
    background-color:#808080;
    border:1px solid rgba(61, 5, 83, 0.78);
    text-align:center;
    width:300px;
    height:300px;
    margin:0 20px;
    display:flex;
    flex-direction:column;
    align-items:center;
}
p{
    align-self:flex-end;
    color:white;
    background-color:#3d3030;
    margin:1px;
    width:100%;
}

</style>
<div class="Artikal">
    <img src="@Url.Action("GetImage", "Home", new { artiklID = Model.ArtiklID })"
         height="200"width="200" alt="pg"/>
    <div><p>@Model.ImeArtikla</p></div>
    <div><p>@Model.Stanje</p></div>
    <div><p>@Model.CijenaArtikla</p></div>
</div>