@model List<Artikl>
<table class="box text-center">
    <tr>
        <th>Ime Artikla</th>
        <th>Cijena Artikla</th>
        <th>Na stanju</th>
    </tr>

@for (int i = 0; i < Model.Count; i++)
{
    <tr class="myitemRow text-center">
        <td class="myitem"><input type="text"   class="form-control" asp-for="@Model[i].ImeArtikla"  /></td>
        <td class="myitem"><input step=".01" class="form-control" asp-for="@Model[i].CijenaArtikla"  /></td>
        <td class="myitem"><input type="number" class="form-control" asp-for="@Model[i].NaStanju"  /></td>
        <td><a asp-action="ChangeArticle"  asp-controller="Admin" asp-route-id="@Model[i].ArtiklID">Izmijeni Artikl</a></td>
        <input type="hidden" asp-for="@Model[i].SlikaArtikla" />
        <input type="hidden" class="itemCategory" asp-for="@Model[i].KategorijaID" />
        <input type="hidden" asp-for="@Model[i].ArtiklID" />
    </tr>
}
</table>
