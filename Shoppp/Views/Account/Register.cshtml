@model RegisterViewModel



<div class="register-box">
    <div class="register-logo">
        <a href="../../index2.html"><b>Admin</b>LTE</a>
    </div>
    <div class="register-box-body">
        <p class="login-box-msg">Register a new membership</p>
        <form method="post">
            <div class="form-group has-feedback">
                <input type="text" asp-for="@Model.FirstName" class="form-control" placeholder="Ime">
                <span asp-validation-for="@Model.FirstName" class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="text" asp-for="@Model.LastName" class="form-control" placeholder="Prezime">
                <span asp-validation-for="@Model.LastName" class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="email" class="form-control" asp-for="@Model.Email" placeholder="Email">
                <span asp-validation-for="@Model.Email" class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Password">
                <span asp-validation-for="@Model.Password" class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
               
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        <a asp-action="Login" asp-controller="Account" class="text-center">I already have a membership</a>
    </div>
    <!-- /.form-box -->
</div>