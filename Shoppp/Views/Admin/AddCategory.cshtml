@model OnlineShopping.ViewModels.KategorijaViewModel
<div class="box box-primary">
    <a asp-action="Index">Home</a>
    <div class="box box-body">
        <form method="post">

            <div>
                <label asp-for="ImeKategorije"></label>
                <span asp-validation-for="@Model.ImeKategorije"></span>
                <input type="text" name="ImeKategorije" />
            </div>
            <div class="prioriteti">

            </div>
            <div>
                <button type="button" id="oznaka">Dodaj Oznaku</button>
            </div>
            <div>
                <input type="submit" value="Potvrdi" />
            </div>
        </form>
    </div>
</div>
<script>
    $(function(){
        let cnt = 0;        
        $("#oznaka").click(function(){
            $(".prioriteti").append(`
                    <div>
                        <label>Oznaka${cnt + 1}</label>
                        <input type="text" name="charachteristics[${cnt}].CharName" placeholder="Dodaj novu oznaku"/>
                        <label>Prioritet</label>
                        <input type="number" name="charachteristics[${cnt++}].Priority placeholder="Dodaj priortet" />
                    </div>`);
        });
    });
</script>