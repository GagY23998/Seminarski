@model OnlineShopping.ViewModels.ArtiklOneViewModel
@inject OnlineShopping.Services.IArtikliService service
<div class="box box-primary col-xs-5">
    <a asp-action="Index">Return Home</a>


    <div class="box-body">
        <form method="post" enctype="multipart/form-data" role="form">
            <div class="form-group">
                <label asp-for="ImeArtikla">Ime Artikla:</label>
                <input class="form-control" type="text" name="ImeArtikla" value="" />
                <span class="text-danger" asp-validation-for="@Model.ImeArtikla"></span>
            </div>
            <div class="form-group">
                <label asp-for="NaStanju">Na stanju:</label>
                <input class="form-control" type="number" name="NaStanju" value="" />
                <span asp-validation-for="@Model.NaStanju"></span>
            </div>
            <div>
                <label asp-for="CijenaArtikla">Cijena:</label>
                <input class="form-control" type="text" name="CijenaArtikla" value="" />
                <span class="text-danger" asp-validation-for="@Model.CijenaArtikla"></span>
            </div>
            <div class="form-group-sm">
                <label asp-for="ImeKategorije">Ime Kategorije:</label>
                <select class="list-group-item" asp-for="ImeKategorije" asp-items="@{new SelectList(service.GetCategories(),"ImeKategorije","ImeKategorije","Izaberite kategoriju")}"></select>
            </div>
            <div>
                <div class="btn btn-default btn-file">
                    <label asp-for="SlikaArtikla">Slika artikla:</label>
                    <i class="fa fa-paperclip"></i>
                    <input class="" type="file" name="SlikaArtikla" required />
                </div>
            </div>
            <br />
            <button class="btn btn-primary" type="submit">Potvrdi</button>
        </form>
    </div>
    </div0>
